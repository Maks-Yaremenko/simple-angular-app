{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "@eagle6/assets/*": ["../assets/*"],
      "@eagle6/configs/*": ["app/configs/*"],
      "@eagle6/core/*": ["app/core/*"],
      "@eagle6/models/*": ["app/models/*"],
      "@eagle6/modules/*": ["app/modules/*"],
      "@eagle6/services/*": ["app/services/*"]
    }
  }
}
